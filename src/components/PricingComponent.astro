---
const options: string[] = [
  "Unlimited websites",
  "100% data ownership",
  "Email reports",
];
import Pricing from "./Pricing.astro";
---

<article
  class="rounded-md shadow-md bg-white flex flex-col z-10 w-full md:w-[650px] mt-8"
>
  <Pricing />
  <div
    class="border-t-[1px] border-t-neutral-light-grayish-blue flex flex-col sm:flex-row items-center justify-between p-8 sm:p-12 space-y-8 sm:space-y-0"
  >
    <ul class="flex flex-col list-none space-y-2">
      {
        options.map((item) => (
          <li class="flex items-center text-sm text-neutral-grayish-blue space-x-2">
            <img src="/icon-check.svg" alt="icon check" />
            <span>{item}</span>
          </li>
        ))
      }
    </ul>
    <div>
      <button
        class="py-4 px-8 text-neutral-grayish-blue bg-neutral-dark-desaturated-blue text-center rounded-full text-sm font-bold transition-colors duration-300 hover:text-white"
      >
        Start my trial
      </button>
    </div>
  </div>
</article>
